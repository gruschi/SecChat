<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="23"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <Space
        android:layout_column="12"
        android:layout_gravity="fill_vertical"
        android:layout_row="4" />

    <Space />

    <Space />

    <Space
        android:layout_width="1dp"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/resetAll"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="113dp"
        android:layout_column="22"
        android:layout_gravity="center"
        android:layout_row="3"
        android:background="@drawable/custom_button_oval"
        android:onClick="resetAll"
        android:text="Reset Client" />

    <Button
        android:id="@+id/start_service"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="101dp"
        android:layout_column="1"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:background="@drawable/custom_button_oval"
        android:onClick="onClickStartServie"
        android:text="Start Service" />

    <Button
        android:id="@+id/stop_service"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="94dp"
        android:layout_column="22"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:background="@drawable/custom_button_oval"
        android:onClick="onClickStopService"
        android:text="Stop Service" />

    <Button
        android:id="@+id/buttonSessionId"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="98dp"
        android:layout_column="1"
        android:layout_gravity="right|center_vertical"
        android:layout_row="3"
        android:background="@drawable/custom_button_oval"
        android:onClick="resetSessionId"
        android:text="SessionId \nexpired" />

    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="wrap_content"
        android:layout_column="22"
        android:layout_gravity="left|top"
        android:layout_row="0"
        android:gravity="center_horizontal"
        android:text="Service Console\n(Debug)"
        android:textColor="#FF0000" />

</GridLayout>